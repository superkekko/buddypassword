{
	"manifest_version": 2,
	"name": "BuddyPassword",
	"description": "Save your password in the cloud",
	"version": "1.0",
	"permissions": ["storage", "activeTab", "webRequest", "webRequestBlocking", "https://*/*", "<all_urls>", "cookies"],
	"browser_action": {
		"default_icon": "icon/icon-64.png",
		"default_popup": "popup/popup.html"
	},
	"options_ui": {
		"page": "settings/settings.html",
		"browser_style": true
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"icons": {
		"32": "icon/icon-32.png",
		"64": "icon/icon-64.png",
		"128": "icon/icon-128.png"
	}
}