{
	"manifest_version": 3,
	"name": "BuddyPassword",
	"description": "Save your password in the cloud",
	"version": "1.0",
	"permissions": ["storage", "activeTab", "cookies"],
	"host_permissions": ["<all_urls>"],
	"icons": {
		"32": "icon/icon-32.png",
		"64": "icon/icon-64.png",
		"128": "icon/icon-128.png"
	},
	"action": {
		"default_icon": {
			"64": "icon/icon-64.png"
		},
		"default_popup": "popup/popup.html",
		"default_title": "BuddyPassword"
	},
	"options_ui": {
		"page": "settings/settings.html",
		"browser_style": true
	},
	"background": {
		"service_worker": "background.js"
	}
}